<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="project1.controller.FLORES_VIEW">
    <Page id="page" title="{i18n>title}">
    <content>
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0" columnsL="2">

            <sap.ui.layout.form:content>
                <sap.ui.core:Title id="Form_Title" text="Survey Form"/>
                <Label id="label_name"   text="Name" />
                <Input id="input_name"   width="500px" placeholder="Name"/>
                <Label id="label_street" text="Label 2"/>
                <HBox id="hbox_1">
                    <Input id="input_street" width="300px"  placeholder="Street" />  
                    <Text  id="text_street"  width="1px"    text=""/>
                    <Input id="input_no"     width="199px"  placeholder="No."/>
                </HBox>

                <Label id="label_zip" text="ZIP Code/City"/>
                <HBox id="hbox_2">
                    <Input id="input_zip"   width="200px"   placeholder="Zip Code"/>  
                    <Text  id="text_space"  width="1px"     text="" />
                    <Input width="299px" placeholder="City" id="input_city"/>
                </HBox>

                <Label text="Country" id="label_country"/>
                <ComboBox width="500px" id="combo_1">
                    <items>
                        <sap.ui.core:Item text="England" id="item_1" key="England"/>
                        <sap.ui.core:Item text="Germany" id="item_2" key="Germany"/>
                        <sap.ui.core:Item text="USA" id="item_3" key="USA"/>
                        <sap.ui.core:Item text="Philippines" id="item_4" key="Philippines"/>
                    </items>
                </ComboBox>
                </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>

        <HBox id="hbox_3">
            <Text text="" width="627px" id="text_space_2"/>
            <Button width="100px" xmlns="sap.m" text="Save" id="button_save" type="Accept"/>
            <Button width="100px" xmlns="sap.m" text="Clear" id="button_clear" type="Reject" press="onclear"/>
        </HBox>
    </content>
    </Page>
</mvc:View>